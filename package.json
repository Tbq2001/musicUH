{
    "name": "cougarecho",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "install-all": "npm install --prefix client && npm install --prefix server",
        "start-client": "npm run start --prefix client",
        "start-server": "npm run start --prefix server",
        "dev": "concurrently \"npm run start-client\" \"npm run start-server\"",
        "build": "npm run build --prefix client && npm run dev --prefix server",
        "start": "node app.js"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.20",
        "concurrently": "^7.0.0",
        "postcss": "^8.4.47",
        "tailwindcss": "^3.4.14"
    },
    "dependencies": {
        "axios": "^1.7.7",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "lucide-react": "^0.452.0"
    }
}
